<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProiectMobileFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProiectMobileFinal.Views"
    xmlns:local="clr-namespace:ProiectMobileFinal"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
         Title="Welcome"
         ContentTemplate="{DataTemplate local:MainPage}"
         />
        <ShellContent
         Title="Upcoming Concerts"
         ContentTemplate="{DataTemplate views:ConcertListPage}"
         />
    </TabBar>

</Shell>
